<%
pages = [
  {'label' => t(:home_navigation_link), 'permalink' => 'home'},
  {'label' => t(:products_navigation_link), 'permalink' => 'products'},
  {'label' => t(:about_navigation_link), 'permalink' => 'about'},
  {'label' => t(:contact_navigation_link), 'permalink' => 'contact'}
]
%>

<div id="site_navigation" class="clearfix">
  <div>
    <% pages.each do |page| %>
      <%
      path = static_path(page['permalink'])
      if params[:permalink]
        if params[:permalink] == page['permalink']
          class_attribute = ' class="active"'
        end
      end
      %>
      <div<%= class_attribute %>>
        <%= link_to page['label'], path %>
      </div>
    <% end %>
  </div>
</div>
