<div id="contact_form">
  <h2><%= t(:contact_title) %></h2>
  <% labelled_form_for(@inquiry) do |f| %>
    <%= f.error_messages %>
    <%= f.hidden_field :subject,
      :value => 'General inquiry from web form' %>
    <div class="row">
      <%= f.text_area :message, :label_text => t(:message_label) + ':' %>
    </div>
    <div class="row">
      <%= f.text_field :name, :label_text => t(:name_label) + ':' %>
    </div>
    <div class="row">
      <%= f.text_field :email, :label_text => t(:email_label) + ':' %>
    </div>
    <div class="row">
      <%= f.text_field :phone, :label_text => t(:phone_label) + ':' %>
    </div>
    <div class="submit clearfix">
      <%= submit_tag t(:submit_label) %>
    </div>
  <% end %>
</div>
