<div class="uncolumned">
  <div class="clearfix">
    <div class="right">
      <%= rounded_box(%Q{
        <h2>#{t :benefits_header}</h2>
        <ul class="compact">
          <li>#{t :benefits_quick_implementation}</li>
          <li>#{t :benefits_customized_features}</li>
          <li>#{t :benefits_proven_reliability_and_performance }</li>
        </ul>
      }) %>
    </div>
    <%= t :products_introduction, :company_name => COMPANY_NAME %>
  </div>
    
  <div class="anchor"><a name="terminal_emulation"></a></div>
  <div class="clearfix">
    <div class="left">
      <%= link_to(
        image_tag( 'te_screen_thumb.jpg', :width => 250, :height => 181 ) +
          '<div class="overlay"></div>',
        'images/te_screen.jpg',
        :target => '_blank',
        :class => 'enlargeable'
      ) %>
    </div>
    <h2><%= t :terminal_emulation_header %></h2>
    <%= t :terminal_emulation_description, :company_name => COMPANY_NAME %>
  </div>
    
  <div class="anchor"><a name="check_in"></a></div>
  <div class="clearfix">
    <% content_tag :div, :class => 'right' do %>
      <%= image_tag 'checkin.jpg', :width => 250, :height => 253 %>
    <% end %>
    <h2><%= t :check_in_header %></h2>
    <%= t :check_in_description, :company_name => COMPANY_NAME %>
  </div>
  <div class="anchor"><a name="board_control"></a></div>
  <div class="clearfix">
    <% content_tag :div, :class => 'left' do %>
      <%= image_tag 'board_control.jpg', :width => 250, :height => 198 %>
    <% end %>
    <h2><%= t :board_control_header %></h2>
    <%= t :board_control_description, :company_name => COMPANY_NAME %>
  </div>
  
  <div class="anchor"><a name="sdk"></a></div>
  <div class="enlargeable clearfix">
    <div class="right">
      <%= link_to(
        image_tag( 'sdk_screen_thumb.jpg', :width => 250, :height => 188 ) +
          '<div class="overlay"></div>',
        'images/sdk_screen.jpg',
        :target => '_blank',
        :class => 'enlargeable'
      ) %>
    </div>
    <h2><%= t :sdk_header %></h2>
    <%= t :sdk_description,
      :company_name => COMPANY_NAME %>
  </div>
</div>
